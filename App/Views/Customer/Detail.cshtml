@model App.ViewModels.Client.Customer.CustomerUpdateProfileViewModel
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Profile</li>
                </ol>
            </nav>
        </div>
    </div>
</section>

<div class="page-section inner-page-sec-padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <!-- My Account Tab Menu Start -->
                    <div class="col-lg-3 col-12">
                        @{Html.RenderPartial("~/Views/Shared/PartialView/Sidebar.cshtml");}
                    </div>
                    <!-- My Account Tab Menu End -->
                    <!-- My Account Tab Content Start -->
                    <div class="col-lg-9 col-12 mt--30 mt-lg--0">
                        <div class="tab-content" id="myaccountContent">
                            <!-- Single Tab Content Start -->
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane active" id="account-info" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Account Details</h3>
                                    <div class="account-details-form">
                                        @using (Html.BeginForm())
                                        {
                                            @Html.AntiForgeryToken()
                                            <div class="row">
                                                <div class="col-lg-6 col-12  mb--30">
                                                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @placeholder = "Name" } })
                                                    @Html.ValidationMessageFor(m => m.Name)
                                                </div>
                                                <div class="col-lg-6 col-12  mb--30">
                                                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @placeholder = "Email", @readonly = "readonly" } })
                                                </div>
                                                <div class="col-12  mb--30">
                                                    @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @placeholder = "Address" } })
                                                    @Html.ValidationMessageFor(m => m.Address)
                                                </div>
                                                <div class="col-12  mb--30">
                                                    @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @placeholder = "Phone" } })
                                                    @Html.ValidationMessageFor(m => m.Phone)
                                                </div>
                                                <div class="col-12  mb--30">
                                                    @Html.EditorFor(m => m.CreditCard, new { htmlAttributes = new { @placeholder = "Credit card" } })
                                                    @Html.ValidationMessageFor(m => m.CreditCard)
                                                </div>
                                                <div class="col-12">
                                                    <button class="btn btn--primary">Save Changes</button>
                                                </div>
                                            </div>
                                        }

                                    </div>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                        </div>
                    </div>
                    <!-- My Account Tab Content End -->
                </div>
            </div>
        </div>
    </div>
</div>

