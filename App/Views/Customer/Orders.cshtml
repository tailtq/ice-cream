@model IEnumerable<App.Models.Order>
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Orders</li>
                </ol>
            </nav>
        </div>
    </div>
</section>

<div class="page-section inner-page-sec-padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <!-- My Account Tab Menu Start -->
                    <div class="col-lg-3 col-12">
                        @{Html.RenderPartial("~/Views/Shared/PartialView/Sidebar.cshtml");}
                    </div>
                    <!-- My Account Tab Menu End -->
                    <!-- My Account Tab Content Start -->
                    <div class="col-lg-9 col-12 mt--30 mt-lg--0">
                        <div class="tab-content" id="myaccountContent">
                            <!-- Single Tab Content Start -->
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane active" id="account-info" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Orders</h3>
                                    <div class="myaccount-table table-responsive text-center">
                                        <table class="table table-bordered">
                                            <thead class="thead-light">
                                                <tr>
                                                    <th>No</th>
                                                    <th>Code</th>
                                                    <th>Ordered At</th>
                                                    <th>Status</th>
                                                    <th>Total</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{int i = 1;}
                                                @foreach (var order in Model)
                                                {
                                                    <tr data-id="@order.Id">
                                                        <td>@i @{i++;}</td>
                                                        <td>@order.Code</td>
                                                        <td>@order.CreatedAt.ToShortDateString()</td>
                                                        <td>
                                                            @if (order.Status == 1)
                                                            {
                                                                <text>Processing</text>
                                                            }
                                                            else if (order.Status == 2)
                                                            {
                                                                <text>Delivering</text>
                                                            }
                                                            else if (order.Status == 3)
                                                            {
                                                                <text>Received</text>
                                                            }
                                                            else if (order.Status == 4)
                                                            {
                                                                <text>Canceled</text>
                                                            }
                                                            else if (order.Status == 5)
                                                            {
                                                                <text>Waiting to be canceled</text>
                                                            }
                                                        </td>
                                                        <td>$@order.PaymentSum</td>
                                                        <td>
                                                            <a href="@Url.Action("OrderDetail", "Customer", new { code = order.Code })" class="">
                                                                <b>View</b>
                                                            </a>
                                                            @if (order.Status == 1)
                                                            {
                                                                <text>|</text> <a href="#" class="order__cancel"><b>Cancel</b></a>
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                        </div>
                    </div>
                    <!-- My Account Tab Content End -->
                </div>
            </div>
        </div>
    </div>
</div>

