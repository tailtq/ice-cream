@model App.ViewModels.Client.Customer.CheckoutViewModel

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Cart")">Cart</a></li>
                    <li class="breadcrumb-item active">Checkout</li>
                </ol>
            </nav>
        </div>
    </div>
</section>

<main id="content" class="page-section inner-page-sec-padding-bottom space-db--20">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Checkout Form -->
                @using (Html.BeginForm())
                {
                    <div class="checkout-form">
                        <div class="row row-40">
                            @if (Model == null)
                            {
                                <div class="col-12">
                                    <h1 class="quick-title">Checkout</h1>
                                    <!-- Slide Down Trigger  -->
                                    <div class="checkout-quick-box">
                                        <p>
                                            <i class="far fa-sticky-note"></i>Returning customer?
                                            <a href="@Url.Action("Login", "Customer")" class="slide-trigger">
                                                Click here to login
                                            </a>
                                        </p>
                                    </div>
                                </div>
                            }
                            <div class="col-lg-7 mb--20">
                                <!-- Billing Address -->
                                <div id="billing-form" class="mb-40">
                                    <h4 class="checkout-title">Billing Address</h4>
                                    <div class="row">
                                        <div class="col-md-6 col-12 mb--20">
                                            <label>Name*</label>
                                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @placeholder = "Name", @required = "required" } })
                                            @Html.ValidationMessageFor(m => m.Name)
                                        </div>
                                        <div class="col-md-6 col-12 mb--20">
                                            <label>Email Address*</label>
                                            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @placeholder = "Email Address", @required = "required" } })
                                            @Html.ValidationMessageFor(m => m.Email)
                                        </div>
                                        <div class="col-md-6 col-12 mb--20">
                                            <label>Phone no*</label>
                                            @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @placeholder = "Phone", @required = "required" } })
                                            @Html.ValidationMessageFor(m => m.Phone)
                                        </div>
                                        <div class="col-md-6 col-12 mb--20">
                                            <label>Address*</label>
                                            @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @placeholder = "Phone", @required = "required" } })
                                            @Html.ValidationMessageFor(m => m.Address)
                                        </div>
                                    </div>
                                </div>
                                @*<div class="col-md-6 col-12 mb--20">
                                    <label>Country*</label>
                                    <select class="nice-select">
                                        <option>Bangladesh</option>
                                        <option>China</option>
                                        <option>country</option>
                                        <option>India</option>
                                        <option>Japan</option>
                                    </select>
                                </div>
                                <div class="col-md-6 col-12 mb--20">
                                    <label>Town/City*</label>
                                    <input type="text" placeholder="Town/City">
                                </div>
                                <div class="col-md-6 col-12 mb--20">
                                    <label>State*</label>
                                    <input type="text" placeholder="State">
                                </div>
                                <div class="col-md-6 col-12 mb--20">
                                    <label>Zip Code*</label>
                                    <input type="text" placeholder="Zip Code">
                                </div>*@
                                @*<div class="order-note-block">
                                    <label for="order-note">Order notes</label>
                                    <textarea id="order-note" cols="30" rows="20" class="order-note" placeholder="Notes about your order, e.g. special notes for delivery."></textarea>
                                </div>*@
                            </div>
                            <div class="col-lg-5">
                                <div class="row">
                                    <!-- Cart Total -->
                                    <div class="col-12">
                                        <div class="checkout-cart-total">
                                            <h2 class="checkout-title">YOUR ORDER</h2>
                                            <h4>Product <span>Total</span></h4>
                                            <ul>
                                                @foreach (var item in ViewBag.cart.ListItem)
                                                {
                                                    <li>
                                                        <span class="left">@item.Name X @item.Quantity</span>
                                                        <span class="right">
                                                            $@String.Format("{0:0.00}", item.GetPriceAfterDiscount() * item.Quantity)
                                                        </span>
                                                    </li>
                                                }
                                            </ul>
                                            <p>Sub Total <span>$@String.Format("{0:0.00}", ViewBag.cart.Total)</span></p>
                                            <p>Shipping Fee <span>$@String.Format("{0:0.00}", ViewBag.cart.ShippingFee)</span></p>
                                            <h4>Grand Total <span>$@String.Format("{0:0.00}", ViewBag.cart.PaymentSum)</span></h4>
                                            <button type="submit" class="place-order w-100 mt--25">Place order</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</main>